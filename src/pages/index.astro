---
import BasicLayout from '../layouts/BasicLayout.astro';
import Steps from '../components/Steps.astro';
import Testimonials from '../components/Testimonials.astro';
import ContactForm from '../components/ContactForm';
---

<BasicLayout title='Welcome to Astro.'>
  <main>
    <Steps />
    <Testimonials />
    <ContactForm client:visible/>
  </main>
</BasicLayout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 2000px;
    max-width: calc(100% - 2rem);
    color: #212832;
    height: 100vh;
    display: flex;
    flex-direction: column;
    gap: 20px;
    height: 100dvh;
    line-height: 1.6;
  }

  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
</style>
