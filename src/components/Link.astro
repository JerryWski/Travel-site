---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a'> {
  text: string;
  dropdown?: boolean;
}

const { text, dropdown, href, ...rest } = Astro.props;
---

<a href={href} {...rest} class='nav-link'>{text}</a>

<style>
  .nav-link {
    color: #212832;
    font-size: 1.1rem;
    font-weight: 400;
    padding: 3px;
  }
  .nav-link:hover {
    background-color: #FFF1DA;
  }
  
</style>
